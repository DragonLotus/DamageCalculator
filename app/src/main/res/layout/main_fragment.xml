   <RadioGroup
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/color"
      android:layout_alignBottom="@+id/color"
      android:layout_toRightOf="@+id/color"
      android:orientation="horizontal">

      <RadioButton
         android:id="@+id/redButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="R"/>

      <RadioButton
         android:id="@+id/blueButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="B"/>

      <RadioButton
         android:id="@+id/greenButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="G"/>

      <RadioButton
         android:id="@+id/lightButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="L"/>

      <RadioButton
         android:id="@+id/darkButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="D"/>
   </RadioGroup>

   <TextView
      android:id="@+id/orbsLinked"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/color"
      android:text="# of Orbs Linked" />

   <SeekBar
      android:id="@+id/orbsLinkedSpinner"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:layout_below="@+id/color"
      android:layout_toRightOf="@+id/orbsLinked"
      android:max="27" />

   <TextView
      android:id="@+id/orbsLinkedValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignRight="@+id/orbsLinkedSpinner"
      android:layout_alignTop="@+id/orbsLinkedSpinner"
      android:text="3" />

   <TextView
      android:id="@+id/orbsPlus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/orbsLinkedSpinner"
      android:text="# of Orbs Plus" />

   <SeekBar
      android:id="@+id/orbsPlusSpinner"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:layout_below="@+id/orbsLinkedSpinner"
      android:layout_toRightOf="@+id/orbsLinked"
      android:max="27" />

   <TextView
      android:id="@+id/orbsPlusValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignRight="@+id/orbsPlusSpinner"
      android:layout_alignTop="@+id/orbsPlusSpinner"
      android:text="3" />

   <TextView
      android:id="@+id/row"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/orbsPlusSpinner"
      android:text="Is a row:" />

   <CheckBox
      android:id="@+id/rowCheckBox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/orbsPlusSpinner"
      android:layout_toRightOf="@+id/orbsLinked" />

   <Button
      android:id="@+id/addMatch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/rowCheckBox"
      android:gravity="center"
      android:text="Add Match" />

   <TextView
      android:id="@+id/List"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/addMatch"
      android:text="Orb Matches:" />

   <ListView
      android:id="@+id/orbMatches"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/calculate"
      android:layout_below="@+id/List" />

   <Button
      android:id="@+id/calculate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:gravity="center"
      android:text="Calculate" />

</RelativeLayout>
