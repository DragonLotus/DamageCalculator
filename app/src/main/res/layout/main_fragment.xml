<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/editHolder"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_label">

    <CheckBox
        android:id="@+id/manualEdit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight=".5"
        android:text="Manual Edit"/>

    <TextView
        android:id="@+id/editTeam"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight=".5"
        android:text="Edit Team"/>
    </LinearLayout>


    <TextView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Color"
        android:layout_below="@+id/editHolder"/>

    <ImageView
        android:id="@+id/red"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/color"
        android:layout_alignBottom="@+id/color"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/color"
        android:src="@drawable/redorb"
        android:layout_below="@+id/editHolder"/>

    <ImageView
        android:id="@+id/blue"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/color"
        android:layout_alignBottom="@+id/color"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/red"
        android:src="@drawable/blueorb"
        android:layout_below="@+id/editHolder"/>

    <ImageView
        android:id="@+id/green"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/color"
        android:layout_alignBottom="@+id/color"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/blue"
        android:src="@drawable/greenorb"
        android:layout_below="@+id/editHolder"/>

    <ImageView
        android:id="@+id/light"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/color"
        android:layout_alignBottom="@+id/color"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/green"
        android:src="@drawable/lightorb"
        android:layout_below="@+id/editHolder"/>

    <ImageView
        android:id="@+id/dark"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/color"
        android:layout_alignBottom="@+id/color"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/light"
        android:src="@drawable/darkorb"
        android:layout_below="@+id/editHolder"/>

    <TextView
        android:id="@+id/orbsLinked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# of Orbs Linked"
        android:layout_below="@+id/color"/>

    <SeekBar
        android:id="@+id/orbsLinkedSpinner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/orbsLinked"
        android:layout_below="@+id/color"/>

    <TextView
        android:id="@+id/orbsPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# of Orbs Plus"
        android:layout_below="@+id/orbsLinkedSpinner"/>

    <SeekBar
        android:id="@+id/orbsPlusSpinner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/orbsLinked"
        android:layout_below="@+id/orbsLinkedSpinner"/>

    <TextView
        android:id="@+id/row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is a row:"
        android:layout_below="@+id/orbsPlusSpinner"/>

    <CheckBox
        android:id="@+id/rowCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/orbsLinked"
        android:layout_below="@+id/orbsPlusSpinner"/>

    <Button
        android:id="@+id/addMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Match"
        android:gravity="center"
        android:layout_below="@+id/rowCheckBox"/>

    <TextView
        android:id="@+id/List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orb Matches:"
        android:layout_below="@+id/addMatch"/>
    <ListView
        android:id="@+id/orbMatches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/List"
        android:layout_above="@+id/calculate"/>

    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:gravity="center"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
