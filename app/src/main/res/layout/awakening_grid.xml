<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/awakeningPicture"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/awakening_1"/>

    <TextView
        android:id="@+id/awakeningAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/awakeningPicture"
        android:layout_alignLeft="@+id/awakeningPicture"
        android:layout_alignRight="@+id/awakeningPicture"
        android:gravity="center"
        android:text="x31"
        android:textSize="16dp"/>

</RelativeLayout>