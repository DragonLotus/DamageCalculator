<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/awakeningPicture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/awakening_1"/>

    <TextView
        android:id="@+id/awakeningAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/awakeningPicture"
        android:layout_alignLeft="@+id/awakeningPicture"
        android:layout_alignRight="@+id/awakeningPicture"
        android:gravity="center_horizontal"
        android:text="x3"
        android:textSize="18dp"/>

</RelativeLayout>