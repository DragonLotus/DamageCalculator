<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/requirementsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/requirements"
        android:layout_alignTop="@+id/requirements"
        android:gravity="center"
        android:text="Meets Requirements: "
        android:textSize="16dp" />

    <CheckBox
        android:id="@+id/requirements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/requirementsText"
        android:gravity="center" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requirements"
        android:layout_above="@+id/clearButton">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context="com.padassist.Fragments.ExtraMultiplierDialogFragment">

            <TextView
                android:id="@+id/elements1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Primary Element: "
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/element1RadioGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/elements1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />

                <CheckBox
                    android:id="@+id/redOrb1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/red_orb_selector"
                    android:button="@null"
                    android:checked="false"
                    android:enabled="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />

                <CheckBox
                    android:id="@+id/blueOrb1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/blue_orb_selector"
                    android:button="@null"
                    android:checked="false"
                    android:enabled="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />

                <CheckBox
                    android:id="@+id/greenOrb1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/green_orb_selector"
                    android:button="@null"
                    android:checked="false"
                    android:enabled="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />

                <CheckBox
                    android:id="@+id/lightOrb1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/light_orb_selector"
                    android:button="@null"
                    android:checked="false"
                    android:enabled="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />

                <CheckBox
                    android:id="@+id/darkOrb1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/dark_orb_selector"
                    android:button="@null"
                    android:checked="false"
                    android:enabled="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />
            </RadioGroup>

            <TextView
                android:id="@+id/elements2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/element1RadioGroup"
                android:gravity="center"
                android:text="Secondary Element: "
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/element2RadioGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/elements2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />

                <CheckBox
                    android:id="@+id/redOrb2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/red_orb_selector"
                    android:button="@null"
                    android:checked="false"
                    android:enabled="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />

                <CheckBox
                    android:id="@+id/blueOrb2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/blue_orb_selector"
                    android:button="@null"
                    android:checked="false"
                    android:enabled="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />

                <CheckBox
                    android:id="@+id/greenOrb2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/green_orb_selector"
                    android:button="@null"
                    android:checked="false"
                    android:enabled="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />

                <CheckBox
                    android:id="@+id/lightOrb2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/light_orb_selector"
                    android:button="@null"
                    android:checked="false"
                    android:enabled="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />

                <CheckBox
                    android:id="@+id/darkOrb2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/dark_orb_selector"
                    android:button="@null"
                    android:checked="false"
                    android:enabled="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5" />
            </RadioGroup>

            <TextView
                android:id="@+id/types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/element2RadioGroup"
                android:gravity="center"
                android:text="Types: "
                android:textSize="16dp" />

            <com.padassist.Graphics.ExpandableHeightGridView
                android:id="@+id/typeGrid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/types"
                android:gravity="center_horizontal"
                android:numColumns="5" />

            <TextView
                android:id="@+id/awakenings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/typeGrid"
                android:gravity="center"
                android:text="Awakenings: "
                android:textSize="16dp" />

            <com.padassist.Graphics.ExpandableHeightGridView
                android:id="@+id/awakeningsGrid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/awakenings"
                android:gravity="center_horizontal"
                android:numColumns="5" />

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/clearButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Clear" />
</RelativeLayout>