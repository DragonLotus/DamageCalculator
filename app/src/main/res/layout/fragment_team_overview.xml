<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anthony.damagecalculator.Fragments.TeamOverviewFragment">

    <TextView
        android:id="@+id/teamHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team HP: "
        android:textSize="18dp"/>

    <com.example.anthony.damagecalculator.Graphics.ThinStroke
        android:id="@+id/teamHpValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/teamHp"
        android:text="99999"
        android:textSize="18dp"
        android:textColor="#00FF00"/>

    <TextView
        android:id="@+id/teamRcv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamHpValue"
        android:text="Team RCV: "
        android:textSize="18dp"/>

    <com.example.anthony.damagecalculator.Graphics.ThinStroke
        android:id="@+id/teamRcvValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamHpValue"
        android:layout_toRightOf="@+id/teamRcv"
        android:text="99999"
        android:textSize="18dp"
        android:textColor="#FF9999"/>

    <GridView
        android:id="@+id/awakenings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamRcvValue"
        android:numColumns="5"
        android:verticalSpacing="0dp"/>

</RelativeLayout>
